type Goal {
  id: ID!
  name: String!
  description: String
  steps: [Step]
}

type Step {
  id: ID!
  title: String!
  description: String
  entries: [Entry]
}

type Entry {
  id: ID!
  title: String!
  date: String!
  time: String!
  message: String
}

type Query {
  getGoals: [Goal]
}

type Mutation {
  addGoal(name: String!, description: String): Goal
  addStep(title: String!, description: String): Step
  addEntry(title: String!, message: String): Entry
}
